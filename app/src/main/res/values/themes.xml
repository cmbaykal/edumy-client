<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.EdumyClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/orange</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/orange</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_edumy</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
    </style>

    <style name="Theme.EdumyClient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EdumyClient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EdumyClient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/orange</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/orange</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_edumy</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
    </style>

</resources>